#include <stdint.h>
#include "stm32f401xe.h"


int main(void)
{
	RCC->AHB1ENR |=RCC_AHB1ENR_GPIOAEN;		//RCC registers for port A & port C
	RCC->AHB1ENR |=RCC_AHB1ENR_GPIOCEN;

	//For port C
	GPIOC->MODER =0x55000;
	GPIOC->OTYPER =0;
	GPIOC->OSPEEDR =0xFF000;
	GPIOC->PUPDR =0;

	//For port A
	GPIOA->MODER =0x550000;
	GPIOA->OTYPER =0;
	GPIOA->OSPEEDR =0xFF0000;
	GPIOA->PUPDR =0;

	//To output LED pins
	GPIOC->BSRR =0x3C0;		//to set the pins
	GPIOA->BSRR =0xF00;



}
